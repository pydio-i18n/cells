<?xml version="1.0" encoding="UTF-8"?>
<plugin id="action.livekit" enabled="false" label="CONF_MESSAGE[Livekit Server]" description="CONF_MESSAGE[Enable audio/video conferencing with Livekit Server]">
    <client_settings>
        <resources>
            <i18n namespace="action_livekit" remote="plug/action_livekit/i18n" />
        </resources>
    </client_settings>
    <server_settings>
        <global_param name="LK_WS_URL" type="string" label="CONF_MESSAGE[Websocket URL]" description="CONF_MESSAGE[Livekit Websocket URL]" mandatory="true" default="http://localhost:7880"/>
        <global_param name="LK_API_KEY" type="string" label="CONF_MESSAGE[API Key]" description="CONF_MESSAGE[Livekit server API Key]" mandatory="true" default="" />
        <global_param name="LK_API_SECRET" type="password" label="CONF_MESSAGE[API Secret]" description="CONF_MESSAGE[Livekit server API Secret]" mandatory="true" default="" />
    </server_settings>
</plugin>
